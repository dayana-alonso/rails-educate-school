<%= form_for @school do |f| %>
  <p><%= f.text_field :name, placeholder: 'name' %></p>
  <p><%= f.text_area :address, placeholder: 'address' %></p>
  <p><%= f.check_box :active %> activate</p>
  <p><%= render partial: 'shared/validation_errors', locals: {object: @school} %></p>
  <p><%= f.submit 'Save School' %></p>
<% end %>